<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <!-- Course Detail Section -->
    <div class="container mx-auto p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Left Column: Video and Details -->
            <div class="space-y-8">
                <!-- Video Player -->
                <div class="card bg-base-100 shadow-xl">
                    <figure class="relative aspect-video">
                        <iframe class="w-full h-full" src="<%= course.trailerUrl %>" title="Course Trailer" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </figure>
                </div>

                <!-- Course Details -->
                <div class="space-y-4">
                    <h1 class="text-4xl font-bold"><%= course.courseName %></h1>
                    <p class="text-gray-600"><%= course.description %></p>

                    <!-- Additional Info -->
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                        <div>
                            <p class="text-sm text-gray-500">Release Date</p>
                            <p class="font-semibold"><%= course.releaseDate %></p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Members Joined</p>
                            <p class="font-semibold"><%= course.membersJoined %></p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Level</p>
                            <p class="font-semibold"><%= course.level %></p>
                        </div>
                    </div>

                    <!-- Join Button -->
                    <div class="card-actions">
                        <a class="btn btn-primary w-full" href="/join">Join Now</a>
                    </div>
                </div>
            </div>

            <!-- Right Column: Instructor Card and Course Content -->
            <div class="space-y-8">
                <!-- Instructor Card -->
                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <div class="flex items-center space-x-4">
                            <div class="avatar">
                                <div class="w-16 rounded-full">
                                    <img src="<%= course.instructorAvatar %>" alt="Instructor Avatar" />
                                </div>
                            </div>
                            <div>
                                <h2 class="card-title"><%= course.instructorName %></h2>
                                <p class="text-sm text-gray-500">Instructor</p>
                            </div>
                        </div>
                        <p class="mt-4"><%= course.instructorBio %></p>
                    </div>
                </div>

                <!-- Course Content -->
                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h2 class="card-title">What You'll Learn</h2>
                        <ul class="space-y-2">
                            <% course.curriculum.forEach(item => { %>
                                <li class="flex items-center space-x-2">
                                    <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                    <span><%= item %></span>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Comments Section -->
        <div class="mt-12">
            <h2 class="text-2xl font-bold mb-6">Student Reviews</h2>
            <div class="space-y-6">
                <% courseComment.forEach(comment => { %>
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <div class="flex items-center space-x-4">
                                <div class="avatar">
                                    <div class="w-12 rounded-full">
                                        <img src="<%= comment.content %>" alt="User Avatar" />
                                    </div>
                                </div>
                                <div>
                                    <h3 class="font-bold">yopyop</h3>
                                    <p class="text-sm text-gray-500"><%= comment.createdAt %></p>
                                </div>
                            </div>
                            <p class="mt-4"><%= comment.content %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@5" rel="stylesheet" type="text/css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</body>
</html>