<!DOCTYPE html>
<html lang="en">

<%- include('components/_head.ejs') %>

    <body>

        <%- include('components/_navbar.ejs') %>

            <!-- Course Detail Section -->
            <div class="container mx-auto p-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Left Column: Video and Details -->
                    <div class="space-y-8">
                        <!-- Video Player -->
                        <div class="card bg-base-100 shadow-xl">
                            <figure class="relative aspect-video">
                                <iframe class="w-full h-full" src="<%= course.trailerUrl %>" title="Course Trailer"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen></iframe>
                            </figure>
                        </div>

                        <!-- Course Details -->
                        <div class="space-y-4">
                            <h1 class="text-4xl font-bold">
                                <%= course.courseName %>
                            </h1>
                            <p class="text-gray-600">
                                <%= course.description %>
                            </p>

                            <!-- Additional Info -->
                            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                                <div>
                                    <p class="text-sm text-gray-500">Release Date</p>
                                    <p class="font-semibold">
                                        <%= course.formatDate() %>
                                    </p>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Members Joined</p>
                                    <p class="font-semibold">
                                        <%= course.membersJoined %>
                                    </p>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Level</p>
                                    <p class="font-semibold">
                                        <%= course.level %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="space-y-8">
                        <div class="card bg-base-100 shadow-xl">
                            <div class="card-body">
                                <div class="flex items-center space-x-4">
                                    <div class="avatar">
                                        <div class="w-16 rounded-full">
                                            <img src="<%= course.instructorAvatar %>" alt="Instructor Avatar" />
                                        </div>
                                    </div>
                                    <div>
                                        <h2 class="card-title">
                                            <%= course.instructorName %>
                                        </h2>
                                        <p class="text-sm text-gray-500">Instruktur</p>
                                    </div>
                                </div>
                                <p class="mt-4">
                                    <%= course.instructorBio %>
                                </p>
                            </div>
                        </div>

                        <!-- Course Content -->
                        <div class="card bg-base-100 shadow-xl">
                            <div class="card-body">
                                <h2 class="card-title">What You'll Learn</h2>
                                <ul class="space-y-2">
                                    <% course.curriculum.forEach(item=> { %>
                                        <li class="flex items-center space-x-2">
                                            <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M5 13l4 4L19 7"></path>
                                            </svg>
                                            <span>
                                                <%= item %>
                                            </span>
                                        </li>
                                        <% }) %>
                                </ul>
                            </div>
                        </div>

                        <!-- Join Button -->
                        <div class="flex flex-col">
                            <form action="/courses/<%= courseId %>/users/<%= userData.id %>/userCourses" method="POST">
                                <button
                                    class="<%= (userCourse) ? 'bg-blue-300' : 'bg-blue-600' %> text-center px-2 py-2 text-white font-bold w-full rounded w-full"
                                    type="submit" <%=(userCourse) ? "disabled" : "" %>>
                                    <%= (userCourse) ? "Sudah Bergabung" : "Gabung Sekarang" %>
                                </button>
                            </form>

                        </div>
                    </div>
                </div>

                <!-- Comments Section -->
                <div class="mt-12">
                    <h2 class="text-2xl font-bold">Ulasan Pelajar</h2>

                    <!-- items-center : center vertical -->
                    <div class="flex items-center mt-4">
                        <img src="https://cdn-icons-png.flaticon.com/512/9385/9385289.png" alt="" class="w-6 h-6">
                        <form action="/courses/<%= courseId %>/users/<%= userData.id %>/comments" method="POST">
                            <input type="text" name="UserId" value="<%= userData.id %>" hidden>
                            <input name="content" type="text" placeholder="Tulis ulasan"
                                class="px-2 py-2 rounded ms-4 border-2">
                            <button class="px-2 py-2 bg-blue-500 font-bold text-white rounded">Tambah Ulasan</button>
                        </form>
                    </div>

                    <% comments.forEach((obj)=> {%>
                        <div class="flex flex-col bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700 p-6 mt-6 relative"
                            x-data="{ isOpen: false }">
                            <!-- Tombol opsi (Edit dan Hapus) -->
                            <div class="absolute top-2 right-2">
                                <!-- Tombol toggle -->
                                <button @click="isOpen = !isOpen" class="p-1 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                                    </svg>
                                </button>
                                <!-- Dropdown menu -->
                                <div x-show="isOpen" @click.away="isOpen = false"
                                    class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg shadow-lg">
                                    <ul>
                                        <li>
                                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600">Edit</a>
                                        </li>
                                        <li>
                                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600">Hapus</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Konten utama -->
                            <div class="flex">
                                <img src="https://cdn-icons-png.flaticon.com/512/9385/9385289.png" alt="" class="w-6 h-6">
                                <div class="flex flex-col ms-4">
                                    <div class="flex">
                                        <p class="font-bold" style="color: white;">
                                            <%= obj.User.email %>
                                        </p>
                                        <p class="ms-4" style="color: white;">
                                            <%= obj.formatDate() %>
                                        </p>
                                    </div>
                                    <% if ((comment.id === obj.id) && (userData.email === obj.User.email)) { %>
                                     <form action="/courses/<%= courseId %>/edit/<%= obj.id %>" method="post">
                                        <input type="text" name="content" value="<%= obj.content %>" style="color: white;">
                                        <button type="submit" class="px-2 py-2 bg-blue-500 rounded text-white">Edit</button>
                                     </form>
                                     <% } else { %>
                                    <p class="text-gray-800 text-sm mt-1" style="color: white;">
                                        <%= obj.content %>
                                    </p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
            <link href="https://cdn.jsdelivr.net/npm/daisyui@5" rel="stylesheet" type="text/css" />
            <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    </body>

</html>